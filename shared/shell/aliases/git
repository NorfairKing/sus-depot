alias g='git add --all . && git commit -a'

alias gs='git status'
alias gd='git diff'

alias ga='git add'
alias gaf='git add -f'

alias gam='git commit --amend'
alias gc='git commit'

alias gp='git push'
alias gpl='git pull --rebase'

function gr() {
    git tag -a $1 -m $2
}
alias gr=gr
alias gpr='git push origin --tags'

alias gm='git merge --no-ff'
alias gmd='gm development'
alias gmm='git merge master'
alias gri='git rebase -i'


alias go='git checkout'
alias gb='git branch'
alias gcm='git checkout master'
alias gcd='git checkout development'
alias gnb='git checkout -b'

function branch_delete() {
    git push origin :$1
    git branch -D $1
} 

alias gbd=branch_delete


alias gpb='git push --set-upstream origin'

alias gi="vim .gitignore"

function pull_request() {
    id="$1"
    branch="$2"
    git fetch origin pull/$id/head:$branch
}

alias gplpr=pull_request

alias gl='git log --graph --decorate --abbrev-commit --all --pretty=oneline'
alias gls='git log --graph --decorate --abbrev-commit --all --pretty=oneline --stat'
