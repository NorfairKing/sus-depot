# Refresh these aliases 
alias refresh='source ~/.aliases/aliases'

# source all categorized aliases
source_safe() {
    if [ -f $1 ]
    then 
        source $1
    fi
}

source_safe ~/.aliases/color_aliases
source_safe ~/.aliases/dotfile_aliases
source_safe ~/.aliases/git_aliases
source_safe ~/.aliases/ls_aliases
source_safe ~/.aliases/xmonad_aliases
source_safe ~/.aliases/package_aliases
source_safe ~/.aliases/navigation_aliases
source_safe ~/.aliases/network_aliases
source_safe ~/.aliases/editor_aliases
source_safe ~/.aliases/tmp_aliases
source_safe ~/.aliases/workflow_aliases

# State of computer
alias sus='sudo pm-suspend'

# Terminal aliases 
alias h='history'
alias x='exit'

# Open files easily.
alias open='xdg-open'
