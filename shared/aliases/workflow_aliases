# Taskwarrior

alias t='task'
alias ta='t add'
alias tl='t list'
alias tc='t calendar'

alias tg='t burndown.daily'
alias tgm='t burndown'
alias tgy='t burndown.monthly'
alias c='task context'

alias in='ta +in +next'

task_info () {
    task=$1
    shift
    t $task info $@
}
alias ti=task_info

task_modify () {
    task=$1
    shift
    t $task modify $@
}
alias tm=task_modify

task_make_waiting () {
    t $1 modify +waiting_for -next
}

alias tmw=task_make_waiting
alias tlw='task list +waiting_for'

task_done () {
    t $1 done
}
alias td=task_done

alias tn='t add +next'

task_make_next () {
    t $1 modify +next
}
alias tmn=task_make_next

task_project_add () {
    project=$1
    shift
    t add pro:$project $@
}

alias tp=task_project_add

task_project_list() {
    t list limit:53 pro:$@ 
}
alias tpl=task_project_list

task_depends () {
    t $1 modify depends:$2
}

alias tdp=task_depends
alias tdep=task_depends

task_annotate () {
    task=$1
    shift
    t $task annotate $@
}
alias tA=task_annotate
alias tan=task_annotate

task_start (){
    task=$1
    shift
    t $task start $@ 
}
alias ts=task_start

alias rnd='t add +next +rnd RND:'
alias rndp='t add +next +rnd RND: New project:'
alias think='t add +next +think wait:+1d Think about:'
alias repay='t add pro:repay'

task_deadline (){
    t add +deadline due:"$1" "$@"
}

alias deadline=task_deadline

# specific project aliases
alias tblog='tp blog'
alias tlblog='tpl blog'

alias tsm='tp blog_sm'
alias tlsm='tpl blog_sm'

alias ter='tp erasmus'
alias tler='tpl erasmus'

alias tan='tp analyse'
alias tlan='tpl analyse'

alias tswop='tp swop'
alias tlswop='tpl swop'

alias tcn='tp computer_networks'
alias tlcn='tpl computer_networks'

alias tkr='tp kansrekenen'
alias tlkr='tpl kansrekenen'

alias trl='tp religie'
alias tlrl='tpl religie'

alias trzl='tp religie'
alias tlrzl='tpl religie'

alias tpno='tp pno'
alias tlpno='tpl pno'

alias tas='tp auto_schedule'
alias tlas='tpl auto_schedule'

## Blog work aliases

# A blogpost
work_blogpost () {
    post_abb="$1"
    project="blog_$post_abb"
    offset="$2"
    
    task add project:$project Write first draft on $post_abb post due:friday$offset +next
    task add project:$project Find good tags on $post_abb post due:friday$offset
    task add project:$project Write final draft of $post_abb post due:friday$offset
    task add project:$project Put up the $post_abb post due:saturday$offset
}

alias post=work_blogpost

# Post idea
post_idea () {
    task add project:blog +in Post idea:$@
}
alias pi=post_idea
