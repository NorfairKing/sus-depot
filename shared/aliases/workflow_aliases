alias tlrzl='tpl religie'

alias tpno='tp pno'
alias tlpno='tpl pno'

alias tas='tp auto_schedule'
alias tlas='tpl auto_schedule'


## Agenda
alias c='gcalcli'
alias ct='gcalcli agenda 0am 12pm'
alias cw='gcalcli agenda 0am "$(date -d "next week")"'
alias cw1='gcalcli calw'
alias cw2='gcalcli calw 2'
alias cm='gcalcli calm'

add_event () {
    prompt () {
        echo -n "$1> "
        read $1
    }
    prompt title
    prompt location
    prompt datet
    prompt duration
    prompt description

    gcalcli --calendar 'syd.kerckhove@gmail.com' \
            --title "$title" \
            --where "$location" \
            --when "$datet" \
            --duration "$duration" \
            --description "$description" \
            --reminder "5" \
            add

}

alias ca=add_event
