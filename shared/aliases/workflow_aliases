# Taskwarrior

alias t='task'
alias ta='t add'
alias tl='t list'
alias tc='t calendar'

alias tg='t burndown.daily'
alias tgm='t burndown'
alias tgy='t burndown.monthly'

task_info () {
    task=$1
    shift
    t $task info $@
}
alias ti=task_info

task_modify () {
    task=$1
    shift
    t $task modify $@
}
alias tm=task_modify

task_make_waiting () {
    t $1 modify +waiting_for -next
}

alias tmw=task_make_waiting

task_done () {
    t $1 done
}
alias td=task_done

alias tn='t add +next'

task_make_next () {
    t $1 modify +next
}
alias tmn=task_make_next

task_project_add () {
    project=$1
    shift
    t add pro:$project $@
}

alias tp=task_project_add

task_project_list() {
    t list pro:$@
}
alias tpl=task_project_list

task_depends () {
    t $1 modify depends:$2
}

alias tdp=task_depends
alias tdep=task_depends

task_annotate () {
    task=$1
    shift
    t $task annotate $@
}
alias tA=task_annotate
alias tan=task_annotate

alias rnd='t add +next +rnd RND:'
alias rndp='t add +next +rnd RND: New project:'
alias think='t add +next +think wait:+1d Think about:'
alias repay='t add pro:repay'

# specific project aliases
alias tblog='tp blog'
