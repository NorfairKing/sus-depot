card xmonad {
    alternatives $(HOSTNAME) $(HOST) shared
    into ~/.xmonad

    outof xmonad

    xmonad.hs -> xmonad.hs
    makefile  -> makefile

    {
        into lib

        Actions.hs    -> Actions.hs
        Constants.hs  -> Constants.hs
        Internet.hs   -> Internet.hs
        Keys.hs       -> Keys.hs
        Layout.hs     -> Layout.hs
        Workspaces.hs -> Workspaces.hs
        Modifier.hs   -> Modifier.hs
        Solarized.hs  -> Solarized.hs
    }
}
